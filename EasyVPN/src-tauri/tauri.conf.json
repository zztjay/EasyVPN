{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "easyvpn",
  "version": "0.1.0",
  "identifier": "com.easyvpn.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 400,
        "height": 640,
        "resizable": false,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "focus": true,
        "center": true,
        "hiddenTitle": false,
        "visible": true,
        "label": "main",
        "url": "index.html",
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ],
    "externalBin": [],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "execute": true
    },
    "http": {
      "all": true,
      "request": true
    },
    "fs": {
      "all": true,
      "scope": {
        "allow": ["**"]
      }
    },
    "path": null,
    "os": {
      "all": true
    },
    "window": {
      "all": true
    }
  }
}
